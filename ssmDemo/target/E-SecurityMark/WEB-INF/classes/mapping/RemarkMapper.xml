<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xkygame.ssm.dao.RemarkDao">

    <resultMap id="RemarkBaseMap" type="com.xkygame.ssm.model.Remark" autoMapping="true">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>


    <insert id="create" parameterType="com.xkygame.ssm.model.Remark" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO remark(workID,replyID,userid,userName,userPic,iuserid,iuserName,content,likeNum,createTime,update_by,updateTime)
        VALUES (#{workID},#{replyID},#{userid},#{userName},#{userPic},#{iuserid},#{iuserName},#{content},#{likeNum},#{createTime},#{update_by},#{updateTime})
    </insert>

    <update id="updateRemarkLikeNum">
        UPDATE remark SET
        <if test="flag == 1">likeNum = likeNum + 1</if>
        <if test="flag == 0">likeNum = likeNum - 1</if>
        WHERE id = #{id}
    </update>


    <select id="findRemarkByID" resultMap="RemarkBaseMap">
        SELECT * FROM remark WHERE id=#{id}
    </select>
</mapper>